  <body oncontextmenu="return false;">
    <%- include('auth/groupLogoutPopup'); -%>
      <div style="display: none;" id="content" order="-1"></div>
      <div id="sidebar">
        <div class="sidebarContainer">
          <div id="menuItemGroup">
            <%= group %>
          </div>
          <div id="menuItemName" style="font-family: teamBoxFontBold; background-color: '<%=color %>';">
            <%= username %>
          </div>
          <div class="clear"></div>
          <!-- LARA 22.07.2016 -->
          <!--
        <div class="sidebarItem" onClick="showHideItem(2);">
          <div style="float: left; padding: 0px 0px 0px 10px;">Main Menu</div>
          <div id="sidebarItem2" class="transform"></div>
          <div class="clear"></div>
        </div>
        <div id="sidebarItemFocus2">
          <div class="itemMenu" onClick="saveData();">Save Image (USB)</div>
          <div class="itemMenu" onClick="saveScreenshot();">Download Image</div>
          <a href="hub.ejs">
